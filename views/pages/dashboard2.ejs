    <% include ../partials/head %>
</head>

<body>
    <header>
        <% include ../partials/header %>
    </header>
    <main>
        <div class="jumbotron">
            <h1>Adminpanel!</h1>
            <h3>Opret produkt</h3>
            <form class="form-horizontal" role="form" method="post" action="/products" onSubmit="return checkblank(this);">
                <div class="form-group">
                    <label for="name" class="col-md-3 control-label">Name</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" name="name" placeholder="Name" style="width:300px;">
                    </div>
                    <label for="description" class="col-md-3 control-label">Description</label>
                    <div class="col-md-9">
                        <textarea name="description" class="form-control" placeholder="Description" style="width:300px;" rows="5"></textarea>
                    </div>
                    <label for="img" class="col-md-3 control-label">Img</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" name="img" placeholder="Img" style="width:300px;">
                    </div>
                    <label for="price" class="col-md-3 control-label">Price</label>
                    <div class="col-md-9">
                        <input type="text" class="form-control" name="price" placeholder="Price" style="width:300px;">
                    </div>
                </div>                  
        
                <div class="form-group">
                    <!-- Button -->
                    <div class="col-md-offset-3 col-md-9">
                        <button id="btn-products" type="submit" class="btn btn-info">
                            <i class="icon-hand-right"></i>SEND?!</button>
                    </div>
                </div>
            </form>
            <hr>
            <div id="productForm">
                <img class="loading" src="loading.gif">
            </div>
            <hr>
            <h2>Produkter</h2>
            <em style="margin-left:55px;">NAVN</em>
            <em style="margin-left:130px;">PRIS</em>
            <em style="margin-left:35px;">VARENR</em>
            <em style="margin-left:30px">FK_TYPE</em>
            <br>
            <br>
            <div id="productsList"></div>
            <br>
            <br>
            <div id="userList"></div>
        </div>
    </main>
        <% include ../partials/footer %>
            <!-- Script til adminpanel -->
    <script src="../../public/js/panel.js"></script>
    <!-- <script src="../../routes/admin.js"></script> -->
</body>

</html>